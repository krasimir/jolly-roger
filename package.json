{
  "name": "jolly-roger",
  "version": "0.4.2",
  "description": "A micro framework on top of React hooks",
  "main": "src/index.js",
  "scripts": {
    "build": "browserify ./src/index.js -o ./umd/jr.js -t [ babelify --presets [ @babel/preset-env @babel/preset-react ] --plugins [ @babel/plugin-transform-regenerator @babel/plugin-transform-runtime ] ] --external react --standalone JR && uglifyjs --compress --mangle -- ./umd/jr.js > ./umd/jr.min.js",
    "test": "./node_modules/.bin/jest",
    "test-watch": "./node_modules/.bin/jest --watch --verbose false",
    "release": "yarn test && yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krasimir/jolly-roger.git"
  },
  "keywords": [
    "react",
    "hooks",
    "framework"
  ],
  "author": "Krasimir Tsonev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/krasimir/jolly-roger/issues"
  },
  "homepage": "https://github.com/krasimir/jolly-roger#readme",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-regenerator": "7.0.0",
    "@babel/plugin-transform-runtime": "7.2.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "7.3.1",
    "babel-jest": "24.1.0",
    "babelify": "10.0.0",
    "browserify": "16.2.3",
    "jest": "24.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-testing-library": "6.0.0",
    "uglify-js": "3.5.5"
  },
  "files": [
    "umd/"
  ]
}
